{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "moduleDetection": "force",

    //원시타입 null 체크를 false이면 nulll 처리 된다
    //"strictNullChecks": false

    "allowJs": true // js 파일도 허용함
    //"noImplicitAny": false // 암시적으로 위험한 코드알림을 제거해라 뜻임
  },
  "ts-node": {
    // ts-node  현재는 안됨, $tsx src/index.ts 로 하면됩니다.
    "esm": true
  },
  "include": ["src"]
}
